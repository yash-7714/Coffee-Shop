<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Product Name -->
    <TextView
        android:id="@+id/tvCartItemName"
        android:text="Espresso"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content" />

    <!-- Quantity Controls -->
    <Button android:id="@+id/btnDecrease" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="48dp" android:minHeight="48dp" android:text="-" android:textSize="20sp" android:background="@drawable/btn_quantity_selector" android:textColor="@color/white" android:padding="8dp"/>

    <TextView
        android:id="@+id/tvQuantity"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_width="48dp"
        android:layout_height="40dp" />

    <Button android:id="@+id/btnIncrease" android:layout_width="wrap_content" android:layout_height="wrap_content" android:minWidth="48dp" android:minHeight="48dp" android:text="+" android:textSize="20sp" android:background="@drawable/btn_quantity_selector" android:textColor="@color/white" android:padding="8dp"/>

    <!-- Remove Button -->
    <Button
        android:id="@+id/btnRemove"
        android:text="Remove"
        android:textColor="#fff"
        android:background="#b71c1c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"/>
</LinearLayout>
